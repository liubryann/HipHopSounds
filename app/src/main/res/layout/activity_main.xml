<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/migosButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/migos"
            android:paddingEnd="35sp"
            android:text="@string/migos"
            android:textSize="35sp"
            android:textColor="#FFC400"
            android:background="#000"
            android:onClick="openMigosList"/>

        <Button
            android:id="@+id/pumpButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/pump"
            android:drawableStart="@drawable/pump"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:textSize="35sp"
            android:textColor="#D81B60"
            android:background="#dbd38e"
            android:onClick="openPumpList"/>

        <Button
            android:id="@+id/uziButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#1A237E"
            android:drawableStart="@drawable/liluzi"
            android:onClick="openUziList"
            android:paddingEnd="20sp"
            android:paddingStart="20sp"
            android:text="@string/liluzi"
            android:textColor="#880E4F"
            android:textSize="35sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/savage"
            android:textSize="35sp"
            android:background="#730000"
            android:drawableStart="@drawable/savage"
            android:paddingStart="25sp"
            android:paddingEnd="25sp"
            android:onClick="openTwentyOneList"/>


    </LinearLayout>

</ScrollView>
